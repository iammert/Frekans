<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTextAppearance"  parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/size_text_regular</item>
        <item name="android:fontFamily">@font/font_product_sans</item>
    </style>

    <style name="BaseTextAppearance.Medium">
        <item name="android:textSize">@dimen/size_text_medium</item>
    </style>

</resources>
